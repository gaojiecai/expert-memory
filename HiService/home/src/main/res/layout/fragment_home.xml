<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.com.hiservice.view.CircleViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <include
        android:id="@+id/home_entrance2"
        layout="@layout/home_entrance2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_entrance" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_entrance2"
        android:divider="#ffff0000"
        android:dividerHeight="10dp" />

    <include
        android:id="@+id/home_entrance"
        layout="@layout/home_entrance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/home_viewpager" />
</RelativeLayout>