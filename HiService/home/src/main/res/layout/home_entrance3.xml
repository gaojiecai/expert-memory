<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_location_success_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/color_ffffff">

        <ImageView
            android:id="@+id/iv_hicar_shop"
            android:layout_width="102dp"
            android:layout_height="44dp"
            android:src="@mipmap/icon_location_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_hicar_shop"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_location_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#454545"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_location_shop_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="#999999"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_enter_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0.5dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_dedede" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:text="进店"
                android:textColor="#757575"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>